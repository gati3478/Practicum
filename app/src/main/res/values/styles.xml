<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppTheme">
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="Base.Theme.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFC107</item>
        <item name="colorPrimaryDark">#FFA000</item>
        <item name="colorAccent">#689F38</item>
    </style>

    <style name="AppTheme.FreeUni" parent="AppTheme">
        <item name="colorPrimary">#FFC107</item>
        <item name="colorPrimaryDark">#FFA000</item>
        <item name="colorAccent">#689F38</item>
    </style>

    <style name="AppTheme.AgrUni" parent="AppTheme">
        <item name="colorPrimary">#8BC34A</item>
        <item name="colorPrimaryDark">#689F38</item>
        <item name="colorAccent">#FFA000</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
